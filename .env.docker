# Docker environment file
# Copy this to .env and fill in your values

# OpenAI API Key (required for AI features)
OPENAI_API_KEY="" 

# Google Sheets Credentials (optional, for Google Sheets support)
# Either provide the full JSON as a string or use the file upload in the app
GOOGLE_SHEETS_CREDENTIALS={"type": "service_account", "project_id": "your-project", ...}

# Application settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Optional: Custom domain for reverse proxy
DOMAIN=excel-ai.localhost
